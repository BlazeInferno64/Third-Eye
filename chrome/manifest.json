{
  "manifest_version": 3,
  "name": "Third-Eye",
  "version": "1.0",
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "48": "icon.png",
    "256": "icon.png"
  },
  "description": "A tool to monitor remote server connections made by websites",
  "permissions": [
    "webRequest",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Third-Eye"
  }
}